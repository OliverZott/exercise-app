<?xml version="1.0" encoding="utf-8" ?>
<Button xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        x:Class="exercise_app.Views.Controls.BasicButton"
        
        Margin="6" 
        TextColor="{AppThemeBinding Light='White', Dark='White'}"
        BackgroundColor="{StaticResource my-base-color-blue2}" 
        BorderColor="{StaticResource my-base-color-blue2}">

    <Button.TextColor>
        <OnPlatform x:TypeArguments="Color">
            <On Platform="iOS" Value="White" />
            <On Platform="Android" Value="White"/>
        </OnPlatform>
    </Button.TextColor>


</Button>