<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"

             xmlns:controls="clr-namespace:exercise_app.Views.Controls"
             xmlns:lang="clr-namespace:exercise_app.Resources.Languages"
             xmlns:vm="clr-namespace:exercise_app.ViewModels"

             x:DataType="vm:ExerciseInputViewModel"
             x:Class="exercise_app.Views.ExerciseInputView"
             Title="{x:Static lang:AppResources.view_input_title}">

    <Grid ColumnSpacing="1" RowSpacing="1" Padding="3" ColumnDefinitions="*" RowDefinitions="Auto,Auto,Auto,*">

        <VerticalStackLayout Padding="3" Grid.Row="0" Margin="5">

            <Grid ColumnDefinitions="*,*">
                <!-- Left Column -->
                <HorizontalStackLayout Grid.Column="0" HorizontalOptions="StartAndExpand">
                    <Label Text="Date: " VerticalTextAlignment="Center"/>
                    <DatePicker x:Name="datePicker" Date="{Binding SelectedDate}" HorizontalOptions="FillAndExpand"/>
                </HorizontalStackLayout>
                <!-- Right Column -->
                <HorizontalStackLayout Grid.Column="1" HorizontalOptions="FillAndExpand">
                    <Label Text="Time: " VerticalTextAlignment="Center"/>
                    <TimePicker x:Name="timePicker" Time="{Binding SelectedTime}" HorizontalOptions="FillAndExpand"/>
                </HorizontalStackLayout>
            </Grid>

            <Entry x:Name="Systolic" Placeholder="Enter Systolic Blood Pressure" 
                   Text="{Binding Systolic, Mode=TwoWay}" Keyboard="Numeric"/>
            <Entry x:Name="Diastolic" Placeholder="Enter Diastolic Blood Pressure" 
                   Text="{Binding Diastolic, Mode=TwoWay}" Keyboard="Numeric"/>
            <Entry x:Name="HeartRate" Placeholder="Enter Heartrate" 
                   Text="{Binding HeartRate, Mode=TwoWay}" Keyboard="Numeric"/>
            <Entry x:Name="Weight" Placeholder="Enter Weight" 
                   Text="{Binding Weight, Mode=TwoWay}" Keyboard="Numeric"/>

            <Grid ColumnSpacing="1" RowSpacing="1" Padding="3" ColumnDefinitions="*,*">
                <controls:BasicButton Text="Save" Grid.Column="0" Command="{Binding SaveOrEditExerciseCommand}" IsEnabled="{Binding IsNotBusy}"/>
                <controls:BasicButton Text="Back" Grid.Column="1" Command="{Binding NavigateBackCommand}" IsEnabled="{Binding IsNotBusy}"/>
            </Grid>

        </VerticalStackLayout>

    </Grid>

</ContentPage>