<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:exercise_app.Models"
             x:DataType="model:Vitals"
             x:Class="exercise_app.Views.Components.VitalsTile">

    <StackLayout Margin="0,10,0,0">
        <Label Text="{Binding DateTime, StringFormat='Time: {0:HH:mm}'}" FontSize="Small" />
        <Label Text="{Binding Systolic, StringFormat='Systolic: {0:N0} mmHg'}" FontSize="Small" />
        <Label Text="{Binding Diastolic, StringFormat='Diastolic: {0:N0} mmHg'}" FontSize="Small" />
        <Label Text="{Binding HeartRate, StringFormat='Heartrate: {0:N0} bpm'}" FontSize="Small" />
        <Label Text="{Binding Weight, StringFormat='Weight: {0:N0} mmHg'}" FontSize="Small" />
    </StackLayout>
    
</ContentView>